<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".home">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/rounded_background"
        android:layout_marginLeft="15dp"
        >

        <AutoCompleteTextView
            android:id="@+id/sourceEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:layout_marginTop="20dp"
            android:layout_marginRight="70dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:hint="Source"
            android:shadowColor="@color/black"
            android:minHeight="48dp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B92E2C2C"
            android:layout_marginTop="82dp"
            android:minHeight="48dp"
            android:layout_marginLeft="70dp"

            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"/>

        <AutoCompleteTextView
            android:id="@+id/destinationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:layout_marginTop="100dp"
            android:layout_marginRight="60dp"
            android:hint="Destination"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:minHeight="48dp" />


        <Button
            android:id="@+id/searchButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:layout_marginTop="170dp"
            android:layout_marginRight="60dp"
            android:text="Search" />
    </RelativeLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/my_primary">


        <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/baseline_menu_24" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="33dp"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Vehicles Tracking System"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:paddingTop="4dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/spot_btn"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="SPOT"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/bus_stop_btn"
        android:layout_width="126dp"
        android:layout_height="100dp"
        android:layout_centerInParent="false"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="BUS STATION"
        android:textColor="#ffffff"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/pass_btn"
        android:layout_width="126dp"
        android:layout_height="100dp"
        android:layout_centerInParent="false"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="7dp"
        android:gravity="center"
        android:text="PASS"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <View
        android:id="@+id/underline_view"
        android:layout_width="120dp"
        android:layout_height="5dp"
        android:layout_marginTop="113dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/rounded_underline" />

</RelativeLayout>


</RelativeLayout>

<com.google.android.material.navigation.NavigationView
    android:id="@+id/nav_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:headerLayout="@layout/header"
    app:menu="@menu/main_menu" />

</androidx.drawerlayout.widget.DrawerLayout>